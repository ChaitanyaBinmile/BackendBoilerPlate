<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <form action="/blog" enctype="multipart/form-data" method="post" >
            <div class="mb-3">
                <label for="coverImage" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
            </div>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp">
        </div>
        <div class=" mb-3"> 
            <label for="floatingTextarea">Body</label>
            <textarea name="body" class="form-control"  id="floatingTextarea"></textarea>
          </div>
          <div class=" mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
    </form>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>