<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <h1>
            <%= blog.title %>
        </h1>
        <img src="<%= blog.coverImageURL %>" width="700px" />
        <p>
            <%= blog.body %>
        </p>
    </div>
    <div class="container mt-4 mb-3">
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px"><%= blog.createdBy.user %>
    </div>
    <div class="container mt-3">
        <h1>Comments(<%= comments.length %>)</h1>
       <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog._id %>" method="post">
            <div >
                <input type="text" name="content" class="form-control mb-3" placeholder="Enter your comment"/>
                <button type="submit" class="btn btn-sm btn-primary">Submit</button>
            </div>
        </form>
       <% } %>
       <div class="mt-3">
           <% comments.forEach(comment => { %>
            <div>
               <img src="<%= comment.createdBy.profileImageURL %>" width="50px">
               <%= comment.createdBy.user %>: <pre><%= comment.content %></pre>
            </div>
           <% }) %>
       </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>